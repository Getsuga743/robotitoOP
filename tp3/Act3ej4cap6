
programa ejcap64A
procesos
  proceso Rect (E base:numero; E altura:numero)
  comenzar
    repetir 2
      repetir altura
        mover
      derecha
      repetir base
        mover
      derecha
  fin
areas
  ciudad : AreaC(1,1,100,100)
robots
  robot robot1
  variables
    bas:numero
  comenzar  
    bas:=5
    repetir 2
      Rect (bas,1)      
      Pos(PosAv+1,PosCa+2)
      bas:= bas - 2
    Rect (bas,1)       
  fin
variables
  R-info : robot1
comenzar
  AsignarArea(R-info,ciudad)
  Iniciar(R-info,1,1)
fin

