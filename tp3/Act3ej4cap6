programa ejcap64A
procesos
  proceso Rect (E base:numero; E altura:numero)
  comenzar
    repetir 2
      repetir altura
        mover
      derecha
      repetir base
        mover
      derecha
  fin
areas
  ciudad : AreaC(1,1,100,100)
robots
  robot robot1
  variables
    bas:numero
    alt:numero
  comenzar  
    bas:=5
    repetir 3
      Rect (bas,1)      
      Pos(PosAv+1,PosCa+2)
      bas:= bas - 2
    Pos(1,1)
    alt:=15  
    Rect (bas,1)
    repetir 4
      Rect (1,alt)      
      Pos(PosAv+1,PosCa+2)
      alt:= alt - 4        
  fin
variables
  R-info : robot1
comenzar
  AsignarArea(R-info,ciudad)
  Iniciar(R-info,1,1)
fin
